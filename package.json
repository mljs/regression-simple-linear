{
  "name": "ml-regression-simple-linear",
  "version": "3.0.1",
  "description": "Simple Linear Regression",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib",
    "lib-esm",
    "src"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-only && npm run eslint && npm run prettier && npm run check-types",
    "test-only": "vitest --coverage --run",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mljs/regression-simple-linear.git"
  },
  "keywords": [
    "linear regression",
    "least squares",
    "linear fit"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mljs/regression-simple-linear/issues"
  },
  "homepage": "https://github.com/mljs/regression-simple-linear#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^9.12.0",
    "eslint-config-cheminfo-typescript": "^16.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "cheminfo-types": "^1.8.0",
    "ml-regression-base": "^4.0.0"
  }
}
